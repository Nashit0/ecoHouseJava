<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.ecohouse.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_GameFragment"
            app:destination="@id/FragmentTest_game" />

    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.ecohouse.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">


        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_GameOverFragment"
            app:destination="@id/Fragment_gameover" />
    </fragment>

    <fragment
        android:id="@+id/FragmentTest_game"
        android:name="com.example.ecohouse.GameFragment"
        android:label="test game fragment"
        tools:layout="@layout/fragment_game">
    </fragment>

    <fragment
        android:id="@+id/Fragment_gameover"
        android:name="com.example.ecohouse.GameOverFragment"
        android:label="game over fragment"
        tools:layout="@layout/fragment_gameover">

        <action
            android:id="@+id/action_GameOverFragment_to_SecondFragment"
            app:destination="@+id/SecondFragment"
            />
        <action
            android:id="@+id/action_GameOverFragment_to_GameFragment"
            app:destination="@+id/FragmentTest_game"
            />
    </fragment>

</navigation>