<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_game_rectangle">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="59dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/switch_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="124dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.83" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:constraint_referenced_ids="robinet_bath, robinet_cuisine , robinet_salle_de_bain"
        app:flow_maxElementsWrap="1"
        app:flow_wrapMode="aligned"
        app:layout_constraintEnd_toEndOf="@id/col_3"
        app:layout_constraintStart_toStartOf="@id/col_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="!!!ALERTE!!!"
        android:fontFamily="@font/pixel_game"
        android:textColor="#64303C"
        android:shadowColor="#ED5C5F"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="0.1"
        android:textSize="30dp"
        android:lineHeight="50dp"
        android:height="25dp"
        android:id="@+id/message_gaspillage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="!!!ALERTE!!!"
        android:fontFamily="@font/pixel_game"
        android:textColor="#64303C"
        android:shadowColor="#ED5C5F"
        android:shadowDx="-4"
        android:shadowDy="-4"
        android:shadowRadius="0.1"
        android:textSize="30dp"
        android:height="25dp"
        android:id="@+id/message_gaspillage_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/message_gaspillage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/jauge_gaspillage_fond"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:background="@drawable/jauge_gaspillage"/>

    <View
        android:id="@+id/jauge_gaspillage"
        android:layout_width="332dp"
        android:layout_height="16dp"
        android:layout_marginStart="9dp"
        android:background="#ED5C5F"
        app:layout_constraintBottom_toBottomOf="@id/jauge_gaspillage_fond"
        app:layout_constraintStart_toStartOf="@id/jauge_gaspillage_fond"
        app:layout_constraintTop_toTopOf="@id/jauge_gaspillage_fond" />
        />


    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="35dp"
        android:layout_height="48dp"
        android:background="@drawable/pause_button"
        />


    <View
        android:id="@+id/thermo_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F0A4B8"
        app:layout_constraintTop_toTopOf="@id/thermo"
        app:layout_constraintBottom_toBottomOf="@id/thermo"
        app:layout_constraintStart_toStartOf="@id/thermo"
        app:layout_constraintEnd_toEndOf="@id/thermo"
        android:layout_margin="5dp" />

    <ImageView
        android:id="@+id/thermo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thermo_contour"
        app:layout_constraintStart_toStartOf="@id/col_1"
        app:layout_constraintEnd_toEndOf="@+id/col_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/handGrab"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/thermo_jauge"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:background="#ED5C5F"
        app:layout_constraintBottom_toBottomOf="@id/thermo"
        app:layout_constraintStart_toStartOf="@id/thermo"
        app:layout_constraintEnd_toEndOf="@id/thermo"
        android:layout_margin="7.5dp" />

    <ImageView
        android:id="@+id/thermo_handle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/thermo_handle"
        app:layout_constraintTop_toTopOf="@id/thermo_jauge"
        app:layout_constraintStart_toStartOf="@id/thermo_jauge"
        app:layout_constraintEnd_toEndOf="@id/thermo_jauge"/>


    <ImageButton
        android:id="@+id/light_switch_1"
        android:layout_width="42dp"
        android:layout_height="85dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="switch lumière"
        android:scaleType="fitCenter"
        android:src="@drawable/light_switch"
        app:layout_constraintStart_toStartOf="@id/switch_col"
        app:layout_constraintEnd_toEndOf="@id/switch_col"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/light_switch_2"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageButton
        android:id="@+id/light_switch_2"
        android:layout_width="42dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="switch lumière"
        android:scaleType="fitCenter"
        android:src="@drawable/light_switch"
        app:layout_constraintStart_toStartOf="@id/switch_col"
        app:layout_constraintEnd_toEndOf="@id/switch_col"
        app:layout_constraintTop_toBottomOf="@+id/light_switch_1"
        app:layout_constraintBottom_toTopOf="@+id/light_switch_3" />

    <ImageButton
        android:id="@+id/light_switch_3"
        android:layout_width="42dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="switch lumière"
        android:scaleType="fitCenter"
        android:src="@drawable/light_switch"
        app:layout_constraintStart_toStartOf="@id/switch_col"
        app:layout_constraintEnd_toEndOf="@id/switch_col"
        app:layout_constraintTop_toBottomOf="@+id/light_switch_2"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/robinet_bath"
        android:padding="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitCenter"
        android:src="@drawable/faucet" />

    <ImageView
        android:id="@+id/robinet_cuisine"
        android:padding="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitCenter"
        android:src="@drawable/faucet" />

    <ImageView
        android:id="@+id/robinet_salle_de_bain"
        android:padding="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitCenter"
        android:src="@drawable/faucet" />

    <TextView
        android:id="@+id/angletest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:textColor="#000"/>


    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/house"
            android:layout_width="350dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/house_bg" />

        <ImageView
            android:id="@+id/bath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:src="@drawable/bath_0"
            android:layout_marginTop="80dp"
            android:layout_marginStart="8dp"
            />


        <FrameLayout
            android:id="@+id/kitchen_container"
            android:layout_width="134dp"
            android:layout_height="156dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/stove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="54dp"
                android:src="@drawable/stove_off"

                />

            <ImageView
                android:id="@+id/fridge"
                android:layout_marginTop="43dp"
                android:layout_marginRight="1dp"
                android:layout_gravity="top|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fridge_closed"
                />

            <View
                android:id="@+id/four"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp" />
        </FrameLayout>


        <ImageView
            android:contentDescription="chambre"
            android:id="@+id/light_overlay"
            android:layout_width="196dp"
            android:layout_height="158dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bedroom_0" />


        <ImageView
            android:contentDescription="salon"
            android:id="@+id/cheminee_overlay"
            android:layout_width="196dp"
            android:layout_height="156dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/livingroom_0" />
    </FrameLayout>

    <ImageView
        android:id="@+id/handGrab"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/hand_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/col_1"
        app:layout_constraintStart_toStartOf="@id/col_1"
        app:layout_constraintTop_toBottomOf="@+id/thermo" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/tutorial_screen"
        android:layout_width="400dp"
        android:layout_height="360dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_info"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blabla de tuto"
            android:fontFamily="@font/yoster_island"/>

        <Button
            android:id="@+id/play_button"
            android:layout_width="177dp"
            android:layout_height="59dp"
            android:background="@drawable/button_states"
            android:fontFamily="@font/pixel_game"
            android:text="JOUER"
            android:textColor="#F6E3BE"
            android:textSize="32dp"
            app:backgroundTint="@null" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>