<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_game_rectangle">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/switch_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="124dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.86" />


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="!!!ALERTE!!!"
        android:fontFamily="@font/pixel_game"
        android:textColor="#64303C"
        android:shadowColor="#ED5C5F"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="0.1"
        android:textSize="30dp"
        android:lineHeight="50dp"
        android:height="25dp"
        android:id="@+id/message_gaspillage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="!!!ALERTE!!!"
        android:fontFamily="@font/pixel_game"
        android:textColor="#64303C"
        android:shadowColor="#ED5C5F"
        android:shadowDx="-4"
        android:shadowDy="-4"
        android:shadowRadius="0.1"
        android:textSize="30dp"
        android:height="25dp"
        android:id="@+id/message_gaspillage_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/message_gaspillage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/jauge_gaspillage_fond"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:background="@drawable/jauge_gaspillage"/>

    <View
        android:id="@+id/jauge_gaspillage"
        android:layout_width="189dp"
        android:layout_height="16dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/rectangle_rouge"
        app:layout_constraintBottom_toBottomOf="@id/jauge_gaspillage_fond"
        app:layout_constraintStart_toStartOf="@id/jauge_gaspillage_fond"
        app:layout_constraintTop_toTopOf="@id/jauge_gaspillage_fond" />
        />


    <ImageButton
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="35dp"
        android:layout_height="48dp"
        android:background="@drawable/pause_button"
        />

    <ImageView
        android:id="@+id/thermo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thermo_contour"
        app:layout_constraintStart_toStartOf="@id/col_1"
        app:layout_constraintEnd_toEndOf="@+id/col_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/handGrab"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/handGrab"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/hand_grab"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/col_1"
        app:layout_constraintEnd_toEndOf="@+id/col_1"
        app:layout_constraintTop_toBottomOf="@+id/thermo"
        app:layout_constraintBottom_toBottomOf="parent"
         />

    <ImageButton
        android:id="@+id/light_switch_1"
        android:layout_width="42dp"
        android:layout_height="85dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="switch lumière"
        android:scaleType="fitCenter"
        android:src="@drawable/light_switch"
        app:layout_constraintStart_toStartOf="@id/switch_col"
        app:layout_constraintEnd_toEndOf="@id/switch_col"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/light_switch_2"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageButton
        android:id="@+id/light_switch_2"
        android:layout_width="42dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="switch lumière"
        android:scaleType="fitCenter"
        android:src="@drawable/light_switch"
        app:layout_constraintStart_toStartOf="@id/switch_col"
        app:layout_constraintEnd_toEndOf="@id/switch_col"
        app:layout_constraintTop_toBottomOf="@+id/light_switch_1"
        app:layout_constraintBottom_toTopOf="@+id/light_switch_3" />

    <ImageButton
        android:id="@+id/light_switch_3"
        android:layout_width="42dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="switch lumière"
        android:scaleType="fitCenter"
        android:src="@drawable/light_switch"
        app:layout_constraintStart_toStartOf="@id/switch_col"
        app:layout_constraintEnd_toEndOf="@id/switch_col"
        app:layout_constraintTop_toBottomOf="@+id/light_switch_2"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        app:layout_constraintStart_toStartOf="@id/col_3"
        app:layout_constraintEnd_toEndOf="@id/col_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/robinet"
        android:padding="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/faucet" />



    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/house"
            android:layout_width="350dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/house_bg" />

        <FrameLayout
            android:id="@+id/kitchen_container"
            android:layout_width="134dp"
            android:layout_height="156dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/kitchen_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/kitchen_1" />

            <View
                android:id="@+id/four"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp" />
        </FrameLayout>


        <ImageView
            android:contentDescription="chambre"
            android:id="@+id/light_overlay"
            android:layout_width="196dp"
            android:layout_height="158dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bedroom_0" />


        <ImageView
            android:id="@+id/bathroom_overlay"
            android:layout_width="134dp"
            android:layout_height="159dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:contentDescription="salle de bain"
            android:src="@drawable/bathroom_1" />

        <ImageView
            android:contentDescription="salon"
            android:id="@+id/cheminee_overlay"
            android:layout_width="196dp"
            android:layout_height="156dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/livingroom_0" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>